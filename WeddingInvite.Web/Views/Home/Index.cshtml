<section id="Contact" class="hero section">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title">Contact / RSVP</h1>

            @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "contact-form", role = "form" }))
            {
                <form>
                    <div class="field is-horizontal">
                        <div class="field-body">
                            <div class="field">
                                <p class="control has-icons-left">
                                    @Html.TextBoxFor(model => model.Name, new { @placeholder = "Name", @type = "text", @class = "input", aria_label = "Name" })
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </p>
                                <br>
                            </div>
                            <div class="field">
                                <p class="control has-icons-left has-icons-right">
                                    @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @type = "text", @class = "input", aria_label = "Email" })
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    @Html.TextAreaFor(model => model.Message, new { @placeholder = "Message", @class = "textarea text-area-min-height", aria_label = "Message" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="submit" value="Send" name="submit" class="button is-primary">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</section>